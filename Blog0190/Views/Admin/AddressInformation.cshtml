@using Blog0190.Models.Sinifler
@model List<AddresInformation>
@{
    ViewBag.Title = "AddressInformation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Unvan Melumatlar Siyahisi</h2>
<br />
<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>Tel</th>
        <th>Adres</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Yenile</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.ID</td>
            <td>@x.Tel</td>
            <td>@x.Adres</td>
            <td>@x.Email</td>
            <td><a href="/Admin/AdresInformationSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/AdressGetir/@x.ID" class="btn btn-warning">Yenile</a></td>
        </tr>
    }

</table>
<a href="/Admin/YeniAdress/" class="btn btn-primary">Yeni Unvan Yarat </a>
<a href="@Url.Action("ExportPDFAdresInformation","Admin")" class="btn btn-primary">Pdf </a>


