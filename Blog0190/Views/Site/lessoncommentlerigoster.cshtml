@using Blog0190.Models.Sinifler
@model List<LessonComment>
@{
    Layout = null;
}

@foreach (var x in Model)
{
    <div class="bg-white" style="padding: 20px; margin-bottom: 20px;">
        <div class="media mb-4">
            <img src="~/portfolio2/images/avatar.png" alt="Image" class="img-fluid mr-3 mt-1" style="width: 60px;">
            <div class="media-body">
                <h6><b>@x.Name </b></h6>
                <p>
                    @x.Text
                </p>
            </div>
        </div>
    </div>
}
