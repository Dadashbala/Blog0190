@using Blog0190.Models.Sinifler
@model List<About>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container-fluid py-5">
    <div class="container pt-5">
        <div class="row">
            @foreach (var x in Model)
            {
            <div class="col-lg-6" style="min-height: 300px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100" src="@x.BigFoto" >
                </div>
            </div>
            <div class="col-lg-6 pt-5 pb-lg-5">
                <div class="about-text bg-white p-4 p-lg-5 my-lg-5">
                    <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">About Us</h6>
                    <h1 class="mb-3">@x.TextName</h1>
                    <p>@x.Text </p>

                    <div class="row mb-4">
                        <div class="col-6">
                            <img class="img-fluid" src="@x.FotoOne" alt="">
                        </div>
                        <div class="col-6">
                            <img class="img-fluid" src="@x.FotoTwo" alt="">
                        </div>
                    </div>
                    <a href="@x.CV" class="btn btn-primary mt-1">Download CV</a>
                </div>
            </div>
            }
        </div>
    </div>
</div>